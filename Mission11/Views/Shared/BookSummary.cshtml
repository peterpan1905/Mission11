@{
}

@model Book

<div class="card m-1 p-1">
    <h3>@Model.Title</h3>
    <span class="fst-italic">@Model.Author</span>
    <br />
    <ul class="custom-list">
        <li><strong class="custom-bold">Publisher:</strong> @Model.Publisher</li>
        <li><strong class="custom-bold">ISBN:</strong> @Model.Isbn</li>
        <li><strong class="custom-bold">Classification:</strong> @Model.Classification</li>
        <li><strong class="custom-bold">Category:</strong> @Model.Category</li>
        <li><strong class="custom-bold">Page Count:</strong> @Model.PageCount</li>
        <li><strong class="custom-bold">Price:</strong> $@Model.Price</li>
    </ul>
</div>